<h1>Create an article</h1>

<%= form_for @article do |variablename| %>
    <p>
      <%= variablename.label :title %> <br/>
      <%= variablename.text_field :title %>
    </p>
    <p>
      <%= variablename.label :description %> <br/>
      <%= variablename.text_area :description %>
    </p>
    <p>
      <%= variablename.submit %>
    </p>

<% end %>