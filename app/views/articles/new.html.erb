<h1>Create an article</h1>

<% if @article.errors.any? %>
<h2> Please fix the following errors:</h2>
 <ul>
   <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
   <% end %>
 </ul>
<% end %>

<%= form_for @article do |variablename| %>
    <p>
      <%= variablename.label :title %> <br/>
      <%= variablename.text_field :title %>
    </p>
    <p>
      <%= variablename.label :description %> <br/>
      <%= variablename.text_area :description %>
    </p>
    <p>
      <%= variablename.submit %>
    </p>

<% end %>

<%= link_to "Back to Index", articles_path %>