<h2 align="center"> <%= @article.title %> </h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <h4 class="center description"><strong>Description:</strong></h4>
    <hr>
     <%= simple_format(@article.description) %>
     <div class="article-actions">
        <%= link_to "Edit", edit_article_path(@article), class: "btn btn-xs btn-primary" %>  <!-- use @article, because specifically this-->
        <%= link_to "DELETE", article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-xs btn-danger" %>
        <%= link_to "Back to Index", articles_path, class: "btn btn-xs btn-success" %>
      </div>
  </div>
  