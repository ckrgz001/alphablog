<h1 align="center"> All AlphaBloggers</h1>
<div align="center">
  <%= will_paginate %>
  <% @users.each do |blogger| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(blogger), user_path(blogger) %></li>
          <li class="article-title"><%=link_to blogger.username, user_path(blogger) %></li>
          <li><small><%= pluralize(blogger.articles.count, "article") if blogger.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(blogger), method: :delete,
          data: { confirm: "Are you sure you want to delete this user and their articles?" } %> </li>
        <% end %>
        
        </div>
      </div>
    </ul>


<% end %>
    <%= will_paginate %>
</div>