<h1 align="center"> All AlphaBloggers</h1>
<div align="center">
  <% @users.each do |blogger| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><%= link_to gravatar_for(blogger), user_path(blogger) %></li>
          <li class="article-title"><%=link_to blogger.username, user_path(blogger) %></li>
          <li><small><%= pluralize(blogger.articles.count, "article") if blogger.articles %></small></li>
        </div>
      </div>
    </ul>


<% end %>
</div>