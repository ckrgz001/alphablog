<h1 align="center">log in </h1>

     <%= form_for :session, html: {class: "form-horizontal", role: "form"}, url: login_path do |variablename| %> 
      
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= variablename.label :email %>
          </div>
          <div class="col-sm-8">
            <%= variablename.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true  %>
          </div>
        </div>
        
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= variablename.label :password %> 
          </div>
          <div class="col-sm-8">
            <%= variablename.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>
        
        <div class="form-group">
           <div class="col-sm-offset-2 col-sm-10">
            <%= variablename.submit "Login", class:'btn btn-primary btn-md' %>
          </div>
        </div>
      
      <% end %>
      <div class="col-xs-4 col-xs-offset-4">
       [ <%= link_to "Cancel and return to Index", articles_path %> ]
     